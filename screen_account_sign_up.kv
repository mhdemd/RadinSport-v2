#:import MDTextFieldPersianrect persianuixrect.MDTextFieldPersianrect
<Sign_up@Screen>:
    name: "signup"
    mgr1: _sc
    ScrollView:
        id: _sc
        effect_cls: 'ScrollEffect'
        bar_width: 0
        BoxLayout:
            orientation:'vertical'
            size_hint_y: None
            height: self.minimum_height  
            padding:mm(2), 0, mm(2), mm(20)
            spacing: 0
            MDLabel:
                halign: 'center'
                font_size: sp(14)
                text: get_display(arabic_reshaper.reshape('فرم ثبت مشخصات'))
                font_name: 'font/IRANSansXFaNum-Medium.ttf'
                size_hint_y: None
                height: mm(6)
            Widget:
                size_hint_y: None
                height: dp(5)
                canvas:
                    Color:
                        rgba: 128/255, 128/255, 128/255, .1
                    Rectangle:
                        pos: dp(0), self.y
                        size: root.width - dp(0), self.height
            MDLabel:
                halign: 'right'
                font_size: sp(12)
                text: get_display(arabic_reshaper.reshape('مشخصات فردی:'))
                font_name: 'font/IRANSansXFaNum-Medium.ttf'
                size_hint_y: None
                height: mm(6)
                
            GridLayout:
                cols: 2
                size_hint_y: None
                height: mm(15)
                spacing: '5dp'
                MDTextFieldPersianrect:
                    id: _last_name
                    base_direction: 'rtl'
                    multiline: False
                    font_size: sp(12)
                    font_name: 'font/IRANSansXFaNum-Medium.ttf'
                    size_hint: 1, None
                    height: mm(6)   
                    hint_text:  get_display(arabic_reshaper.reshape('نام خانوادگی:(الزامی*)'))                   

                MDTextFieldPersianrect:
                    id: _name
                    base_direction: 'rtl'
                    multiline: False
                    font_size: sp(12)
                    font_name: 'font/IRANSansXFaNum-Medium.ttf'
                    size_hint: 1, None
                    height: mm(6)
                    hint_text:  get_display(arabic_reshaper.reshape('نام:(الزامی*)'))

                MDTextFieldPersianrect:
                    id: _mobile_number
                    base_direction: 'rtl'
                    multiline: False
                    font_size: sp(12)
                    font_name: 'font/IRANSansXFaNum-Medium.ttf'
                    size_hint: 1, None
                    height: mm(6)
                    hint_text:  get_display(arabic_reshaper.reshape('شماره تلفن همراه:(الزامی*)'))
                MDTextFieldPersianrect:
                    id: _home_number
                    base_direction: 'rtl'
                    multiline: False
                    font_size: sp(12)
                    font_name: 'font/IRANSansXFaNum-Medium.ttf'
                    size_hint: 1, None
                    height: mm(6)
                    hint_text:  get_display(arabic_reshaper.reshape('شماره تلفن ثابت:'))

            MDLabel:
                halign: 'right'
                font_size: sp(12)
                text: get_display(arabic_reshaper.reshape('آدرس:'))
                font_name: 'font/IRANSansXFaNum-Medium.ttf'
                size_hint_y: None
                height: mm(8)
            BoxLayout:
                orientation:'vertical'
                size_hint_y: None
                height: mm(27)
                spacing: '5dp'
                BoxLayout:
                    orientation:'horizontal'
                    size_hint_y: None
                    height: mm(6)
                    MDTextFieldPersianrect:
                        id: _address
                        base_direction: 'rtl'
                        font_size: sp(12)  
                        font_name: 'font/IRANSansXFaNum-Medium.ttf'          
                        hint_text: 'sad'
                        size_hint: 1, None
                        height: mm(6)
                        #multiline: True
                        hint_text:  get_display(arabic_reshaper.reshape('شهر:(الزامی*)'))

                    MDTextFieldPersianrect:
                        id: _address1
                        base_direction: 'rtl'
                        font_size: sp(12)  
                        font_name: 'font/IRANSansXFaNum-Medium.ttf'          
                        hint_text: 'sad'
                        size_hint: 1, None
                        height: mm(6)
                        #multiline: True
                        hint_text:  get_display(arabic_reshaper.reshape('استان:(الزامی*)'))

                MDTextFieldPersianrect:
                    id: _address2
                    base_direction: 'rtl'
                    multiline: False
                    font_size: sp(12)
                    font_name: 'font/IRANSansXFaNum-Medium.ttf'
                    size_hint: 1, None
                    height: mm(6)
                    hint_text:  get_display(arabic_reshaper.reshape('محله/میدان/خیابان اصلی:(الزامی*)'))
                MDTextFieldPersianrect:
                    id: _address3
                    base_direction: 'rtl'
                    multiline: False
                    font_size: sp(12)
                    font_name: 'font/IRANSansXFaNum-Medium.ttf'
                    size_hint: 1, None
                    height: mm(6)
                    hint_text:  get_display(arabic_reshaper.reshape('کوچه فرعی/پلاک/واحد :(الزامی*)'))
                MDTextFieldPersianrect:
                    id: _postal_code
                    base_direction: 'rtl'
                    multiline: False
                    font_size: sp(12)
                    font_name: 'font/IRANSansXFaNum-Medium.ttf'
                    size_hint: 1, None
                    height: mm(6)
                    hint_text:  get_display(arabic_reshaper.reshape('کد پستی:(الزامی*)'))
            Label:
                size_hint_y: None
                height: dp(15)
            MDLabel:
                halign: 'right'
                font_size: sp(12)
                text: get_display(arabic_reshaper.reshape('ایمیل:'))
                font_name: 'font/IRANSansXFaNum-Medium.ttf'
                size_hint_y: None
                height: mm(6)

            MDTextFieldPersianrect:
                id: _email
                base_direction: 'rtl'
                multiline: False
                font_size: sp(12)
                font_name: 'font/IRANSansXFaNum-Medium.ttf'
                size_hint: 1, None
                height: mm(6)
            Label:
                size_hint_y: None
                height: dp(15)
            MDLabel:
                halign: 'right'
                font_size: sp(12)
                size_hint_y: None
                height: mm(6)

            MDFillRoundFlatButton:
                text: get_display(arabic_reshaper.reshape('پذیرش شرایط و ثبت نام')) 
                font_name: 'font/IRANSansXFaNum-Medium.ttf'
                md_bg_color: "red"
                pos_hint: {'center_x': .5}
                on_press:
                    app.root.sign_up()
                    app.root.open_account_xls()
            MDFlatButton:
                text: get_display(arabic_reshaper.reshape('شرایط حریم خصوصی')) 
                font_size: sp(10)
                font_name: 'font/IRANSansXFaNum-Medium.ttf'
                pos_hint: {'center_x': .5}
                on_press:
                    app.root.current= 'privacy'
            Label:
                size_hint_y: None
                height: mm(40)

<Privacy@Screen>:
    name: "privacy"
    Image:
        source: 'img/App/privacy.png'
    MDFlatButton:
        text: get_display(arabic_reshaper.reshape('بازگشت')) 
        font_size: sp(10)
        font_name: 'font/IRANSansXFaNum-Medium.ttf'
        pos_hint: {'center_x': .5, 'y': .05}
        on_press:
            app.root.current= 'signup'
