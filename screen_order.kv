<Order@Screen>:
    name: 'order'
    mgr1: _bot_nav
    mgr2: _RecycleView_order
    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            size_hint_y: 1/13
            halign: 'center'
            size_hint_y: None
            height: mm(5)      
            text: get_display(arabic_reshaper.reshape('سبد خرید'))
            font_name: 'font/IRANSansXFaNum-Medium.ttf'
        Widget:
            size_hint_y: None
            height: dp(3)
            canvas:
                Color:
                    rgba: 128/255, 128/255, 128/255, .1
                Rectangle:
                    pos: dp(0), self.y
                    size: root.width - dp(0), self.height
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 10/13
            RV_Order: 
                id: _RecycleView_order 
                mgr3: _RecycleBoxLayout_order    
                order_text: '1'            
                viewclass: 'MyButton'
                
                RecycleBoxLayout:
                    id: _RecycleBoxLayout_order
                    default_size: None, dp(150)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(20)

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 1/13
            padding: dp(10), dp(5), dp(10), dp(5) 
            BoxLayout:
                orientation: 'vertical'
                spacing: dp(5)
                MDLabel:
                    halign: 'left'
                    size_hint_y: None
                    height: dp(15)        
                    text: get_display(arabic_reshaper.reshape('جمع سبد خرید'))
                    font_name: 'font/IRANSansXFaNum-Medium.ttf'
                    font_size: '12sp'
                    theme_text_color: "Custom"
                    text_color: 128/255, 128/255, 128/255, 1
                MDLabel:
                    halign: 'left'
                    size_hint_y: None
                    height: dp(20)        
                    text: get_display(arabic_reshaper.reshape('%s تومان'%(root.mgr2.total))) if root.mgr2.total != None else '0'
                    font_name: 'font/IRANSansXFaNum-Medium.ttf'
                    font_size: '14sp'

            MDFillRoundFlatButton:
                md_bg_color: "red"
                halign: 'right'
                size_hint_y: None
                height: dp(32)        
                text: get_display(arabic_reshaper.reshape('ادامه فرایند خرید'))
                font_name: 'font/IRANSansXFaNum-Medium.ttf'
                on_press: 
                    app.root.mgr7.mgr2.show_popup('')
                on_release:                   
                    Clock.schedule_once(app.root.mgr7.mgr2.check_registration, 0.75)
                    #Clock.schedule_once(app.root.mgr7.mgr2.refresh_from_data, 0.85)

                    #Clock.schedule_once(partial(app.root.mgr7.mgr2.add_remove_count, app.root.order_on, '*'), 3)

        BottomNavigation:
            id: _bot_nav
            #size_hint:(1, 1/13)
            size_hint_y: None
            height: (140 / 1080) * self.width 

