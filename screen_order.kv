                    halign: 'right'
                    font_size: '10sp'       
                    text: get_display(arabic_reshaper.reshape(root.color_fa))
                    font_name: 'font/IRANSansXFaNum-Medium.ttf'
                    theme_text_color: "Custom"
                    text_color: 128/255, 128/255, 128/255, 1

                MDIconButton:
                    icon: "circle"
                    theme_icon_color: "Custom"
                    icon_color: root.color_en
                    theme_text_color: "Custom"
                    icon_size: '14sp'
            BoxLayout:
                orientation: "horizontal"
                size_hint_y: 1.3/5
                padding: dp(10), 0, 0, 0
                spacing: dp(10)
                BoxLayout:
                    size_hint_x: .4
                    orientation:'horizontal'
                    canvas.before:
                        Color:
                            rgba: 0,0,0,.5
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
                    canvas:
                        Color:
                            rgba: 1,1,1,1
                        RoundedRectangle:
                            pos: self.x + 1, self.y + 1 
                            size: self.width - 2, self.height - 2 
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
                    MDIconButton:
                        icon: 'trash-can-outline'
                        size_hint_y:  .8
                        size_hint_x:  .4
                        pos_hint:{'center_y': .5}
                        theme_icon_color: "Custom"
                        icon_color: 'red'
                        on_press: 
                            app.root.mgr7.mgr2.add_remove_count(self, '-', '%s'%(root.p_code))

                        #on_press:
                        #    root.ids._lbl.text = str(int(root.ids._lbl.text) - 1) if int(root.ids._lbl.text) > 1 else root.ids._lbl.text 
                        #    #root.order_text = str(int(root.order_text) - 1) if int(root.order_text) > 1 else root.order_text 
                        #on_release:
                        #    app.root.mgr7.mgr2.refresh_from_data()
                        #    app.root.mgr7.mgr2.remove_from_order(self, root.DKP, root.color_en) if root.order_text == '1' else ''
                            
                    Label:
                        id: _lbl
                        text: root.num_order
                        font_name: 'font/IRANSansXFaNum-Medium.ttf'
                        color: 'gray'
                        size_hint_x:  .2
                    MDIconButton:
                        text: '%s'%(root.stock)
                        icon: 'plus'
                        size_hint_y:  .8
                        pos_hint:{'center_y': .5}
                        size_hint_x:  .4
                        theme_icon_color: "Custom"
                        icon_color: 'gray'
                        on_press: 
                            app.root.mgr7.mgr2.add_remove_count(self, '+', '%s'%(root.p_code))
                            #root.ids._lbl.text = str(int(root.ids._lbl.text) + 1) if int(root.ids._lbl.text) < int(self.text) else root.ids._lbl.text 
                MDLabel:
                    size_hint_x: .6
                    halign: 'left'
                    font_size: '12sp'       
                    text: '%s %s'%(get_display(arabic_reshaper.reshape('تومان')), get_display(arabic_reshaper.reshape(root.price_off))) if root.price_off != '0' else '%s %s'%(get_display(arabic_reshaper.reshape('تومان')), get_display(arabic_reshaper.reshape(root.price)))
                    font_name: 'font/IRANSansXFaNum-Medium.ttf'

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 7/27
            ImageButton:
                source: root.image  
                on_press:
                    app.root.open_product_screen(root.image, '')

    MDLabel:
        text: root.error_text
        font_name: 'font/IRANSansXFaNum-Medium.ttf'
        font_size: '12sp'
        color: 'red'
        halign: 'center'
        size_hint_y: None
        height: dp(root.error_text_height) if self.text != '' else dp(0)
    MDLabel:
        size_hint_y: None
        height: dp(5)
    Widget1:

