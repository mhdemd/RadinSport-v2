<Order@Screen>:
    name: 'order'
    mgr1: _bot_nav
    mgr2: _RecycleView_order
    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            size_hint_y: 1/13
            halign: 'center'
            size_hint_y: None
            height: mm(5)      
            text: get_display(arabic_reshaper.reshape('سبد خرید'))
            font_name: 'font/IRANSansXFaNum-Medium.ttf'
        Widget:
            size_hint_y: None
            height: dp(3)
            canvas:
                Color:
                    rgba: 128/255, 128/255, 128/255, .1
                Rectangle:
                    pos: dp(0), self.y
                    size: root.width - dp(0), self.height
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 10/13
            RV_Order: 
                id: _RecycleView_order 
                mgr3: _RecycleBoxLayout_order    
                order_text: '1'            
                viewclass: 'MyButton'
                
                RecycleBoxLayout:
                    id: _RecycleBoxLayout_order
                    default_size: None, dp(150)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(20)

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 1/13
            padding: dp(10), dp(5), dp(10), dp(5) 
            BoxLayout:
                orientation: 'vertical'
                spacing: dp(5)
                MDLabel:
                    halign: 'left'
                    size_hint_y: None
                    height: dp(15)        
                    text: get_display(arabic_reshaper.reshape('جمع سبد خرید'))
                    font_name: 'font/IRANSansXFaNum-Medium.ttf'
                    font_size: '12sp'
                    theme_text_color: "Custom"
                    text_color: 128/255, 128/255, 128/255, 1
                MDLabel:
                    halign: 'left'
                    size_hint_y: None
                    height: dp(20)        
                    text: get_display(arabic_reshaper.reshape('%s تومان'%(root.mgr2.total))) if root.mgr2.total != None else '0'
                    font_name: 'font/IRANSansXFaNum-Medium.ttf'
                    font_size: '14sp'

            MDFillRoundFlatButton:
                md_bg_color: "red"
                halign: 'right'
                size_hint_y: None
                height: dp(32)        
                text: get_display(arabic_reshaper.reshape('ادامه فرایند خرید'))
                font_name: 'font/IRANSansXFaNum-Medium.ttf'
                on_press: 
                    app.root.get_screen('order').mgr2.show_popup('')
                on_release:                   
                    Clock.schedule_once(app.root.get_screen('order').mgr2.check_registration, 0.75)

        BottomNavigation:
            id: _bot_nav
            #size_hint:(1, 1/13)
            size_hint_y: None
            height: (140 / 1080) * self.width 
<MyButton@BoxLayout>:
    image: ''
    title: ''
    price_off: ''
    price: ''
    color_en: root.color_en
    color_fa: ''
    stock: ''
    orientation: 'vertical'
    size_hint_y: None
    height: dp(250)
    p_code: ''
    num_order: ''
    error_text: ''
    error_text_height: 20

    BoxLayout:
        orientation: 'horizontal'      
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 20/27
            spacing: dp(5)
            MDLabel:
                size_hint_y: 1.15/5
                halign: 'right'
                font_size: '14sp'       
                text: get_display(arabic_reshaper.reshape(root.title)) if len(root.title) < 30 else get_display(arabic_reshaper.reshape('%s...'%(root.title[:27]))) 
                font_name: 'font/IRANSansXFaNum-Medium.ttf'
            GridLayout:             
                cols: 2
                size_hint_y: .85/5
                MDLabel:
                    halign: 'right'
                    font_size: '10sp'       
                    text: get_display(arabic_reshaper.reshape('گارانتی اصالت و سلامت فیزیکی کالا'))
                    font_name: 'font/IRANSansXFaNum-Medium.ttf'
                    theme_text_color: "Custom"
                    text_color: 128/255, 128/255, 128/255, 1

                MDIconButton:
                    icon: "shield-check-outline"
                    theme_text_color: "Custom"
                    icon_color: 128/255, 128/255, 128/255, 1
                    icon_size: '14sp'
            GridLayout:
                cols: 2
                size_hint_y: .85/5
                MDLabel:
                    halign: 'right'
                    font_size: '10sp'       
                    text: get_display(arabic_reshaper.reshape('موجود در انبار فروشگاه'))
                    font_name: 'font/IRANSansXFaNum-Medium.ttf'
                    theme_text_color: "Custom"
                    text_color: 128/255, 128/255, 128/255, 1

                MDIconButton:
                    icon: "storefront-check-outline"
                    theme_text_color: "Custom"
                    icon_color: 128/255, 128/255, 128/255, 1
                    icon_size: '14sp'
            GridLayout:   
                cols: 2
                size_hint_y: .85/5
                MDLabel:
                    halign: 'right'
                    font_size: '10sp'       
                    text: get_display(arabic_reshaper.reshape(root.color_fa))
                    font_name: 'font/IRANSansXFaNum-Medium.ttf'
                    theme_text_color: "Custom"
                    text_color: 128/255, 128/255, 128/255, 1

                MDIconButton:
                    icon: "circle"
                    theme_icon_color: "Custom"
                    icon_color: root.color_en
                    theme_text_color: "Custom"
                    icon_size: '14sp'
            BoxLayout:
                orientation: "horizontal"
                size_hint_y: 1.3/5
                padding: dp(10), 0, 0, 0
                spacing: dp(10)
                BoxLayout:
                    size_hint_x: .4
                    orientation:'horizontal'
                    canvas.before:
                        Color:
                            rgba: 0,0,0,.5
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
                    canvas:
                        Color:
                            rgba: 1,1,1,1
                        RoundedRectangle:
                            pos: self.x + 1, self.y + 1 
                            size: self.width - 2, self.height - 2 
                            radius: [(10, 10), (10, 10), (10, 10), (10, 10)]
                    MDIconButton:
                        icon: 'trash-can-outline'
                        size_hint_y:  .8
                        size_hint_x:  .4
                        pos_hint:{'center_y': .5}
                        theme_icon_color: "Custom"
                        icon_color: 'red'
                        on_press: 
                            app.root.get_screen('order').mgr2.add_remove_count(self, '-', '%s'%(root.p_code))

                        #on_press:
                        #    root.ids._lbl.text = str(int(root.ids._lbl.text) - 1) if int(root.ids._lbl.text) > 1 else root.ids._lbl.text 
                        #    #root.order_text = str(int(root.order_text) - 1) if int(root.order_text) > 1 else root.order_text 
                        #on_release:
                        #    app.root.get_screen('order').mgr2.refresh_from_data()
                        #    app.root.get_screen('order').mgr2.remove_from_order(self, root.DKP, root.color_en) if root.order_text == '1' else ''
                            
                    Label:
                        id: _lbl
                        text: root.num_order
                        font_name: 'font/IRANSansXFaNum-Medium.ttf'
                        color: 'gray'
                        size_hint_x:  .2
                    MDIconButton:
                        text: '%s'%(root.stock)
                        icon: 'plus'
                        size_hint_y:  .8
                        pos_hint:{'center_y': .5}
                        size_hint_x:  .4
                        theme_icon_color: "Custom"
                        icon_color: 'gray'
                        on_press: 
                            app.root.get_screen('order').mgr2.add_remove_count(self, '+', '%s'%(root.p_code))
                            #root.ids._lbl.text = str(int(root.ids._lbl.text) + 1) if int(root.ids._lbl.text) < int(self.text) else root.ids._lbl.text 
                MDLabel:
                    size_hint_x: .6
                    halign: 'left'
                    font_size: '12sp'       
                    text: '%s %s'%(get_display(arabic_reshaper.reshape('تومان')), get_display(arabic_reshaper.reshape(root.price_off))) if root.price_off != '0' else '%s %s'%(get_display(arabic_reshaper.reshape('تومان')), get_display(arabic_reshaper.reshape(root.price)))
                    font_name: 'font/IRANSansXFaNum-Medium.ttf'

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 7/27
            ImageButton:
                source: root.image  
                on_press:
                    app.root.open_product_screen(root.image, '')

    MDLabel:
        text: root.error_text
        font_name: 'font/IRANSansXFaNum-Medium.ttf'
        font_size: '12sp'
        color: 'red'
        halign: 'center'
        size_hint_y: None
        height: dp(root.error_text_height) if self.text != '' else dp(0)
    MDLabel:
        size_hint_y: None
        height: dp(5)
