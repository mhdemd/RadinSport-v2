<Category_boxlayout>:
    cat: ''
    title_text: ''
    orientation:'vertical'
    BoxLayout:
        orientation:'horizontal'
        size_hint_y: None
        height: mm(8)
        MDTextButton:
            text: root.title_text
            font_name: 'font/IRANSansXFaNum-Medium.ttf'
            font_size: '12sp'
            theme_text_color: "Custom"
            text_color: 105/255, 171/255, 185/255, 1
            halign: "left"
            valign: 'bottom'
            on_press:
                app.root.show_popup('')
                app.root.change_screen('screen_off.kv', 'Factory.Off()', 'off')
            on_release:
                Clock.schedule_once(partial(app.root.open_category, root.cat), 0.75) #if app.root.grouping_type == 'grouping' else Clock.schedule_once(partial(app.root.p, root.cat), 0.75) 
        BoxLayout:
            orientation:'vertical'
            MDLabel:
            MDLabel:
                font_size: '14sp'
                text: root.cat
                font_name: 'font/IRANSansXFaNum-Medium.ttf'
                halign: "right"
                valign: 'bottom'


<Cat>:
    effect_cls: 'ScrollEffect'
    scroll_type: ['content']
    do_scroll_y: False
    scroll_x: 1
    bar_width: 0

    GridLayout:
        id: _grid
        cols: 5
        #orientation: 'rl-tb'
        padding: dp(0), dp(7), dp(0), dp(17)
        spacing: mm(1)
        size_hint: None, 1 
        width: self.minimum_width  
                   
                
<Grouping@Screen>:
    name: 'grouping'
    mgr1: _bot_nav
    mgr2: _boxlayout_grouping
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(5)
        SearchBar:
            id: _search_bar
            #size_hint:(1, 1/13)
            size_hint_y: None
            height: mm(8)
        ScrollView:
            id: _sc
            effect_cls: 'ScrollEffect'
            do_scroll_x: False
            BoxLayout:
                id: _boxlayout_grouping
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height  
                padding: dp(10), 0, dp(10), 0

        BottomNavigation:
            id: _bot_nav
            size_hint_y: None
            height: (140 / 1080) * self.width 
 

  