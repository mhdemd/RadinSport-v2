<Account>:
    id: _account
    name: 'account'
    mgr1: _bot_nav
    text1: ''
    BoxLayout:
        orientation: 'vertical'
        padding: 0, 0, 0, 0

        BoxLayout:
            orientation: 'vertical'
            size_hint:(1, 11/13)
            ScrollView:
                effect_cls: 'ScrollEffect'
                bar_width: 0
                BoxLayout:
                    orientation:'vertical'
                    size_hint_y: None
                    height: self.minimum_height  
                    spacing: mm(10)
                    MDLabel:
                        halign: 'center'
                        text: ''
                        font_name: 'font/IRANSansXFaNum-Medium.ttf'
                        font_size:'12sp'
                    MDLabel:
                        halign: 'center'
                        text: '%s %s'%( get_display(arabic_reshaper.reshape('عزیز خوش آمدید')), root.text1) if root.text1 != '-' else '' 
                        font_name: 'font/IRANSansXFaNum-Medium.ttf'
                        font_size:'12sp'
                        theme_text_color: "Custom"
                        text_color: "blue"
                    Image:
                        size_hint_y: None    
                        height: dp(200)
                        source: 'img/App/rs.png'
                    MDLabel:
                        halign: 'center'
                        text: get_display(arabic_reshaper.reshape('جهت تسهیل در فرایند خرید لطفا ثبت نام کنید.')) if root.text1 == '-' else ''
                        font_name: 'font/IRANSansXFaNum-Medium.ttf'
                        font_size:'12sp'
                    MDFillRoundFlatButton:
                        text: get_display(arabic_reshaper.reshape('ثبت نام')) if root.text1 == '-' else  get_display(arabic_reshaper.reshape('اصلاح مشخصات')) 
                        font_name: 'font/IRANSansXFaNum-Medium.ttf'
                        md_bg_color: "red"
                        pos_hint: {'center_x': .5}
                        on_press:
                            app.root.change_screen('screen_account_sign_up.kv', 'Factory.Sign_up()', 'signup')
                            app.root.current= 'signup' #if self.text == get_display(arabic_reshaper.reshape('ثبت نام')) else 'signup'
                            app.root.open_account_xls()
                            app.root.load_account_data() if root.text1 != '-' else app.root.clear_account_data()
                            app.root.get_screen('signup').mgr1.scroll_y=1

                    MDFillRoundFlatIconButton:
                        text: get_display(arabic_reshaper.reshape('مشاهده سفارشات')) 
                        font_name: 'font/IRANSansXFaNum-Medium.ttf'
                        md_bg_color: "red"
                        pos_hint: {'center_x': -5} if root.text1 == '-' else {'center_x': .5}
                        icon: 'eye-outline'  
                        on_press:
                            app.root.change_screen('screen_grouping.kv', 'Factory.Grouping()', 'grouping')
                            #app.root.change_screen('screen_order.kv', 'Factory.Det_order()', 'det_order')
                            app.root.change_screen('screen_order_det_order.kv', 'Factory.Det_order()', 'det_order')
                            app.root.see_orders()

                    MDFillRoundFlatIconButton:
                        text: get_display(arabic_reshaper.reshape('خروج از حساب کاربری')) 
                        font_name: 'font/IRANSansXFaNum-Medium.ttf'
                        md_bg_color: "red"
                        pos_hint: {'center_x': -5} if root.text1 == '-' else {'center_x': .5}
                        icon: 'exit-to-app'  
                        on_press:
                            app.root.delete_Personal_Information()
        BottomNavigation:
            id: _bot_nav
            size_hint_y: None
            height: (140 / 1080) * self.width 

