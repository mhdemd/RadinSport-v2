#:import MDTextFieldPersian persianuix.MDTextFieldPersian

<ScrollMain>:
    id: _scroll_main
    mgr1: _carousel
    mgr2: _ScrollView1
    mgr3: _ScrollView2
    effect_cls: 'ScrollEffect'
    do_scroll_x: False
    scroll_distance: dp(1)
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, None
        height: self.minimum_height  
        padding: 0, dp(20), 0, 0
        Carousel1:
            id: _carousel
            size_hint: 1, None
            height: (523 / 1080) * self.width 
        GridLayout1:
            cols: 4
            size_hint: 1, None
            height: (608 / 1080) * self.width 

        ScrollView1:
            id: _ScrollView1
            size_hint: 1, None
            
        GridLayout2:
            cols: 2
            size_hint: 1, None
            height: (843 / 1080) * self.width 

        ScrollView2:
            id: _ScrollView2
            size_hint: 1, None

        MDLabel:
            bold: True
            color: [0, 0, 0, 1]
            font_size:'14sp'
            text: get_display(arabic_reshaper.reshape('خرید بر اساس دسته بندی'))
            font_name: 'font/IRANSansXFaNum-Medium.ttf'
            halign: "center"
            size_hint: 1, None
            height: dp(70)

        GridLayout3:
            cols: 3
            size_hint: 1, None
            height: (1026 / 1080) * self.width 
        MDLabel:
            size_hint: 1, None
            height: dp(90)